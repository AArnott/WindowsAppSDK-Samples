<Page
    x:Class="SampleApp.DisplayAreaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center">DisplayArea / DisplayAreaWatcher</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListBox Margin="5,5,5,5" Name="DisplayAreaListBox" ItemsSource="{x:Bind displayareas}" DisplayMemberPath="DisplayId"></ListBox>
            <Button Margin="5,5,5,5" x:Name="DisplayAreaMoveBtn" Click="DisplayAreaMoveBtn_Click">Move window to selected display</Button>
        </StackPanel>
    </Grid>
</Page>
